@using MudBlazor
@inject NavigationManager Navigator

<MudNavMenu>
    <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
    <MudNavLink Href="/basicdemos" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Settings">Basic Demos</MudNavLink>
    <MudNavLink Href="/serializationdemos" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dataset">Serialization Demos</MudNavLink>
</MudNavMenu>

@code {

    public void NavigateTo(string Url)
    {
        Navigator.NavigateTo(Url);
    }

    private bool IsGroupExpanded(string groupName)
    {
        var uri = Navigator.Uri;
        return uri.Contains(groupName);
    }

}